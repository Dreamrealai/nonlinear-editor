{
  "name": "nonlinear-editor",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.18.0 <23.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "validate:env": "tsx scripts/validate-env.ts",
    "check:env": "bash scripts/check-env.sh",
    "analyze:bundle": "tsx scripts/check-bundle-size.ts",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' jest --maxWorkers=3 --workerIdleMemoryLimit=1024MB",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' jest --watch --maxWorkers=2",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' jest --coverage --maxWorkers=3 --workerIdleMemoryLimit=1024MB",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "clean": "rm -rf .next out coverage playwright-report test-results .turbo",
    "clean:deps": "rm -rf node_modules package-lock.json && npm install",
    "postinstall": "npm run validate:env || true",
    "prepare": "husky"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.2",
    "@google-cloud/vertexai": "^1.10.0",
    "@google-cloud/video-intelligence": "^6.2.1",
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@scalar/api-reference-react": "^0.8.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.76.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "google-auth-library": "^10.4.1",
    "immer": "^10.1.3",
    "lucide-react": "^0.546.0",
    "next": "^16.0.0",
    "pino": "^10.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "sanitize-filename": "^1.6.3",
    "sharp": "^0.34.4",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "web-vitals": "^5.1.0",
    "yaml": "^2.8.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^16.0.0",
    "@playwright/test": "^1.56.1",
    "@swc/jest": "^0.2.39",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "axe-playwright": "^2.2.2",
    "critters": "^0.0.23",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "undici": "^7.16.0",
    "whatwg-fetch": "^3.6.20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "prismjs": "^1.30.0"
  }
}
